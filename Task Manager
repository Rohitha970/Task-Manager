import java.util.ArrayList;
import java.util.Scanner;

public class TaskManagerApp {

    // Terminal color codes
    public static final String GREEN = "\u001B[32m";
    public static final String CYAN = "\u001B[36m";
    public static final String YELLOW = "\u001B[33m";
    public static final String RED = "\u001B[31m";
    public static final String RESET = "\u001B[0m";

    // Task model
    static class Task {
        private int id;
        private String title;
        private String description;
        private boolean completed;

        public Task(int id, String title, String description) {
            this.id = id;
            this.title = title;
            this.description = description;
            this.completed = false;
        }

        public int getId() {
            return id;
        }

        public void update(String title, String description, boolean completed) {
            this.title = title;
            this.description = description;
            this.completed = completed;
        }

        public String toString() {
            return CYAN + "Task ID: " + id + RESET +
                   "\nTitle   : " + title +
                   "\nDesc.   : " + description +
                   "\nStatus  : " + (completed ? GREEN + "âœ… Completed" + RESET : RED + "âŒ Pending" + RESET);
        }
    }

    static ArrayList<Task> taskList = new ArrayList<>();
    static int nextId = 1;

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        boolean running = true;

        printStyled("ğŸ“ Welcome to Task Manager Application", CYAN);

        while (running) {
            printMenu();
            int choice = getIntInput(scanner, "â¡ï¸ Enter your choice: ");

            switch (choice) {
                case 1: createTask(scanner); break;
                case 2: viewTasks(); break;
                case 3: updateTask(scanner); break;
                case 4: deleteTask(scanner); break;
                case 5:
                    printStyled("ğŸ‘‹ Exiting the application. Thank you!", YELLOW);
                    running = false;
                    break;
                default:
                    printStyled("âŒ Invalid choice. Try again.", RED);
            }

            if (running) {
                System.out.print("\nğŸ” Do you want to continue? (yes/no): ");
                String again = scanner.next().toLowerCase();
                if (!(again.equals("yes") || again.equals("y"))) {
                    printStyled("ğŸ‘‹ Exiting the application. Thank you!", YELLOW);
                    break;
                }
            }
        }

        scanner.close();
    }

    // Menu
    public static void printMenu() {
        System.out.println("\nğŸ“š MENU:");
        System.out.println("1. â• Create Task");
        System.out.println("2. ğŸ“„ View Tasks");
        System.out.println("3. âœï¸  Update Task");
        System.out.println("4. âŒ Delete Task");
        System.out.println("5. ğŸšª Exit");
    }

    // 1. Create
    public static void createTask(Scanner scanner) {
        scanner.nextLine(); // consume newline
        System.out.print("ğŸ“Œ Enter Task Title: ");
        String title = scanner.nextLine();
        System.out.print("ğŸ“ Enter Task Description: ");
        String description = scanner.nextLine();

        Task newTask = new Task(nextId++, title, description);
        taskList.add(newTask);

        printStyled("âœ… Task Created Successfully!", GREEN);
    }

    // 2. Read
    public static void viewTasks() {
        if (taskList.isEmpty()) {
            printStyled("ğŸ“­ No tasks available.", RED);
        } else {
            printStyled("ğŸ“‹ Listing All Tasks:", YELLOW);
            for (Task task : taskList) {
                System.out.println("\n" + task);
            }
        }
    }

    // 3. Update
    public static void updateTask(Scanner scanner) {
        if (taskList.isEmpty()) {
            printStyled("ğŸ“­ No tasks to update.", RED);
            return;
        }

        int id = getIntInput(scanner, "ğŸ” Enter Task ID to update: ");
        Task taskToUpdate = findTaskById(id);
        if (taskToUpdate == null) {
            printStyled("â— Task not found!", RED);
            return;
        }

        scanner.nextLine(); // consume newline
        System.out.print("âœï¸ New Title: ");
        String title = scanner.nextLine();
        System.out.print("ğŸ“ New Description: ");
        String desc = scanner.nextLine();
        System.out.print("âœ”ï¸ Mark as completed? (yes/no): ");
        String completed = scanner.nextLine();

        boolean isDone = completed.equalsIgnoreCase("yes") || completed.equalsIgnoreCase("y");
        taskToUpdate.update(title, desc, isDone);

        printStyled("âœ… Task updated successfully!", GREEN);
    }

    // 4. Delete
    public static void deleteTask(Scanner scanner) {
        if (taskList.isEmpty()) {
            printStyled("ğŸ“­ No tasks to delete.", RED);
            return;
        }

        int id = getIntInput(scanner, "ğŸ—‘ï¸ Enter Task ID to delete: ");
        Task task = findTaskById(id);
        if (task != null) {
            taskList.remove(task);
            printStyled("âœ… Task deleted successfully.", GREEN);
        } else {
            printStyled("â— Task not found!", RED);
        }
    }

    // Helper - Find by ID
    public static Task findTaskById(int id) {
        for (Task t : taskList) {
            if (t.getId() == id) return t;
        }
        return null;
    }

    // Helper - Input integer
    public static int getIntInput(Scanner scanner, String prompt) {
        int num = -1;
        boolean valid = false;
        while (!valid) {
            try {
                System.out.print(prompt);
                num = Integer.parseInt(scanner.next());
                valid = true;
            } catch (NumberFormatException e) {
                printStyled("â— Invalid number. Try again.", RED);
            }
        }
        return num;
    }

    // Print with styling
    public static void printStyled(String msg, String color) {
        System.out.println(color + msg + RESET);
    }
}
